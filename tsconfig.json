{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "pretty": true,
      "sourceMap": true,
      "target": "es6",
      "removeComments": true,
      "lib": [
        "es2017",
        "es7",
        "es6",
        "dom"
      ],
      "outDir": "./dist",
      "baseUrl": "./src",
      "strictNullChecks": true,
      "noImplicitAny": false,
      "noFallthroughCasesInSwitch": true,
      "noImplicitReturns": true,
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true
    },
    "include": [
      "src/**/*.ts",
      "test/**/**.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
